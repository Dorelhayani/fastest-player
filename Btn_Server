//----------------------------------------------


// Web name && Server Name
//----------------------------------------------
const char* ssid = "Dor_EL";
const char* password = "1a2b3c4d5e";
//----------------------------------------------


// Object Server and Port Number ( 80 is Ordinary communication and unProtected )
//----------------------------------------------
WiFiClient client;
int server_port = 80; 
//----------------------------------------------


// Wifi Setup Function
//----------------------------------------------
  void wifiClient_Setup() {
  Serial.println("wifiSetup");
  WiFi.begin(ssid,password);
  while (WiFi.status() != WL_CONNECTED) {
  Serial.println("trying ...");
  delay(100); }
  Serial.println("Connected to network"); }
//----------------------------------------------


// Set Data
//----------------------------------------------
	void SendBtnPressed() {
  HTTPClient http;
  String dataURL = "http://api.kits4.me/GEN/api.php?";
  http.begin(client, dataURL);
  int httpCode = http.GET();
  http.end(); }
